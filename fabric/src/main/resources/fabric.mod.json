    "main": [
      "de.pasuki.colorful_redstone_lamps.fabric.ColorfulRedstoneLampsFabric"
    ],
    "client": [
      "de.pasuki.colorful_redstone_lamps.fabric.client.ColorfulRedstoneLampsFabricClient"
    ],
    "fabric-datagen": [
      "de.pasuki.colorful_redstone_lamps.fabric.datagen.ColorfulRedstoneLampsDataGenerator"
    ]
  },
